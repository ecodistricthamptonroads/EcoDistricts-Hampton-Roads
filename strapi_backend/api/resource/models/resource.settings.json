{
  "kind": "collectionType",
  "collectionName": "Resource",
  "info": {
    "name": "Resource"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "Description": {
      "type": "text",
      "required": true,
      "minLength": 1
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": false
    },
    "link": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
    }
  }
}
